                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        var calculator = document.getElementById('wiregrid-calculator');
                        if (!calculator) {
                            return;
                        }

                        var instanceSelect = document.getElementById('wiregrid-instance');
                        var instancesInput = document.getElementById('wiregrid-instances');
                        var hoursInput = document.getElementById('wiregrid-hours');
                        var storageInput = document.getElementById('wiregrid-storage');
                        var egressInput = document.getElementById('wiregrid-egress');
                        var totalEl = document.getElementById('wiregrid-total');
                        var breakdownEl = document.getElementById('wiregrid-breakdown');

                        var instanceRates = {
                            general: { label: 'general purpose', rate: 0.12 },
                            compute: { label: 'compute optimized', rate: 0.18 },
                            memory: { label: 'memory optimized', rate: 0.24 },
                            gpu: { label: 'GPU accelerated', rate: 1.2 }
                        };
                        var storageRate = 32; // USD per TB-month
                        var egressRate = 85; // USD per TB

                        calculator.addEventListener('submit', function (event) {
                            event.preventDefault();
                        });

                        ['change', 'input'].forEach(function (eventName) {
                            calculator.addEventListener(eventName, updateEstimate);
                        });

                        updateEstimate();

                        function readNumber(input, fallback) {
                            var value = parseFloat(input.value);
                            if (!Number.isFinite(value)) {
                                return fallback;
                            }
                            if (input.min !== '') {
                                value = Math.max(parseFloat(input.min), value);
                            }
                            if (input.max !== '') {
                                value = Math.min(parseFloat(input.max), value);
                            }
                            return value;
                        }

                        function formatUnit(value) {
                            return (Math.round(value * 10) % 10 === 0) ? value.toFixed(0) : value.toFixed(1);
                        }

                        function updateEstimate() {
                            var instanceKey = instanceSelect.value;
                            var profile = instanceRates[instanceKey] || instanceRates.general;
                            var instances = readNumber(instancesInput, 1);
                            var hours = readNumber(hoursInput, 720);
                            var storage = readNumber(storageInput, 0);
                            var egress = readNumber(egressInput, 0);

                            var computeCost = profile.rate * instances * hours;
                            var storageCost = storage * storageRate;
                            var egressCost = egress * egressRate;
                            var total = computeCost + storageCost + egressCost;

                            totalEl.textContent = '$' + total.toFixed(2);
                            breakdownEl.textContent = formatUnit(instances) + ' ' + profile.label + ' nodes for ' + formatUnit(hours) + ' hours | ' + formatUnit(storage) + ' TB storage | ' + formatUnit(egress) + ' TB egress.';
                        }
                    });
                </script>

